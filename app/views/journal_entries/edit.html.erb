<%= simple_form_for @journal_entry do |f| %>
  <h1><%= t('journal_entry.edit') %></h1>

  <%= f.input :title %>
  <%= f.input :date, as: :date %>
  <%= f.input :content, as: :text, input_html: { rows: 5 } %>

  <div class='actions'>
    <%= f.submit t('journal_entry.update_entry') %>
  </div>
<% end %>

<p><%= link_to t('journal_entry.back_to_entry_details'), journal_entry_path(@journal_entry) %></p>
