<div class="container">
  <div class="form-container">
    <%= simple_form_for [@user, @journal_entry], url: user_journal_entry_path(@user, @journal_entry) do |f| %>
      <h1><%= t('journal_entry.edit') %></h1>
      <%= f.input :title %>
      <%= f.input :date, as: :date %>
      <%= f.input :content, as: :text, input_html: { rows: 5 } %>
      <%= f.file_field :attached_document %><br><br>
      <div class='actions'>
        <%= f.submit t('journal_entry.update_entry'), class: 'button' %>
        <%= link_to t('journal_entry.back_to_entry_details'), user_journal_entry_path(@journal_entry), class: 'button' %>
      </div>
    <% end %>
  </div>
</div>
