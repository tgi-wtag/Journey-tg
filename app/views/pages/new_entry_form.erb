<h1>Create New Entry</h1>

<%= form_for @entry, url: create_entry_path do |f| %>


  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit "Create Entry", class: "btn" %>
  </div>
<% end %>
